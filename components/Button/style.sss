.button
  cursor: pointer
  display: block
  border-radius: 4px
  text-align: center
  letter-spacing: 0.03em
  max-width: 90px
  margin: 12px auto 0px

.small
  font-size: 12px
  line-height: 1.75em
  padding: 0.75em 1.5em

.flash
  color: white
  background: #8E5F9D

.flash:hover
  color: white
  background: rgba(#8E5F9D, 0.8)
  border: 0

a.flash:hover
  color: white
