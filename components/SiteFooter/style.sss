.site-footer
  font-style: bold
  text-align: center
  bottom: 0
  left: 0
  width: 100%
  position: fixed
  height: 62px
  box-shadow: 0 0 2px rgba(10, 10, 10, 0.8)
  z-index: 1000
  background: #3166AD
  color: white
  padding: 0
  margin: 0
  line-height: 62px

.site-footer:hover
  color: white
  font-size: 17px

@media (min-width: 520px)
  .site-footer:hover
    font-size: 19px
